[program:celerybeat]
command={{ virtualenv_dir }}/bin/python manage.py celerybeat --schedule=celerybeat-schedule --loglevel=INFO
directory={{ django.root_dir }}
user={{ setup.deploy_username }}
group=www-data
numprocs=1
stdout_logfile=/var/log/supervisor/celerybeat.log
stderr_logfile=/var/log/supervisor/celerybeat_error.log
autostart=true
autorestart=true
startsecs=5

environment={% for item in django.env_vars %}{{ item.key }}="{{ item.value }}"{% if not loop.last %},{% endif %}{% endfor %}
