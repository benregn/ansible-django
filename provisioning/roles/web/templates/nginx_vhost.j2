server {
    listen                  80;
    listen                  [::]:80;
    server_name             localhost;
    charset                 utf-8;
    client_max_body_size    75M;
    root                    {{django.root_dir}};

    location / {
        try_files $uri @uwsgi;
    }

    location @uwsgi {
        include     uwsgi_params;
        uwsgi_pass  app_server;
    }
}
